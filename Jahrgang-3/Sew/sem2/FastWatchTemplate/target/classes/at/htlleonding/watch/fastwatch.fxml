<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.htlleonding.watch.controller.FastWatchController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Pane fx:id="pnAnalog" maxHeight="278.0" maxWidth="283.0" minHeight="278.0" minWidth="283.0" prefHeight="278.0" prefWidth="283.0">
               <children>
                  <Line fx:id="linHandMinutes" endY="-200.0" layoutX="141.0" layoutY="137.0" stroke="WHITE" strokeWidth="6.0" />
                  <Line fx:id="linHandHours" endX="200.0" layoutX="141.0" layoutY="137.0" stroke="WHITE" strokeWidth="12.0" />
               </children></Pane>
            <VBox fx:id="vbDigital" alignment="TOP_RIGHT" maxHeight="247.0" maxWidth="280.0" minHeight="247.0" minWidth="280.0" prefHeight="247.0" prefWidth="280.0" spacing="5.0">
               <children>
                  <Label fx:id="lblDayOfWeek" text="WED">
                     <font>
                        <Font name="DSEG7 Classic-Regular" size="22.0" />
                     </font>
                  </Label>
                  <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="lblHours" text="17">
                           <font>
                              <Font name="DSEG7 Classic-Regular" size="50.0" />
                           </font>
                        </Label>
                        <Label text=":">
                           <font>
                              <Font name="DSEG7 Classic-Regular" size="50.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblMinutes" text="39">
                           <font>
                              <Font name="DSEG7 Classic-Regular" size="50.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets right="50.0" top="90.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Tick Delay (ms):" />
            <Slider fx:id="sldTickDelay" max="2000.0" min="1.0" value="500.0" />
            <Label fx:id="lblTickDelay" text="Label" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Time:" />
            <TextField fx:id="txtTime" maxWidth="70.0" promptText="HH:MM" />
            <Label text="Day Of Week:" />
            <ComboBox fx:id="cmbDayOfWeek" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#btnAdjustOnAction" text="Adjust" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <stylesheets>
      <URL value="@fastwatch.css" />
   </stylesheets>
</VBox>
