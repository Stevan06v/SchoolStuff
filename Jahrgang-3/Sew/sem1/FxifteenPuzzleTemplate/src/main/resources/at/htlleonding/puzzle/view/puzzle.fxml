<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="40.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.htlleonding.puzzle.controller.PuzzleController">
    <children>
        <HBox alignment="CENTER" spacing="50">
            <FlowPane fx:id="fpTiles" maxWidth="320">
            </FlowPane>
            <VBox alignment="CENTER" spacing="40.0">
                <GridPane fx:id="gpArrows">
                    <Button text="↑" prefWidth="60" prefHeight="60" GridPane.rowIndex="0" GridPane.columnIndex="1"></Button>
                    <Button text="←" prefWidth="60" prefHeight="60" GridPane.rowIndex="1" GridPane.columnIndex="0"></Button>
                    <Button text="→" prefWidth="60" prefHeight="60" GridPane.rowIndex="1" GridPane.columnIndex="2"></Button>
                    <Button text="↓" prefWidth="60" prefHeight="60" GridPane.rowIndex="2" GridPane.columnIndex="1"></Button>
                </GridPane>
                <Label text="Moves go here" style="-fx-font-size: 20"></Label>
                <Button text="Reset" />
            </VBox>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
